<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Cerberus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#FF0000</item> <!-- Red -->
        <item name="colorPrimaryVariant">#B00000</item> <!-- Darker red -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Text on red -->

        <item name="colorSecondary">#FF0000</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>

        <item name="android:colorBackground">#000000</item> <!-- Black background -->
        <item name="colorSurface">#1A1A1A</item> <!-- Slightly lighter black -->
        <item name="colorOnSurface">#FFFFFF</item> <!-- Text on background -->
    </style>

    <style name="SecureBlockerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


</resources>