<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_black">

    <LinearLayout
        android:id="@+id/pin_setup_root"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_gradient_black"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/pin_setup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/set_pin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/pin_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:hint="@string/enter_pin"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/pin_confirm_input"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:hint="@string/confirm_pin"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/darker_gray"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_pin"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_gradient_red"
            app:iconGravity="textStart"/>
    </LinearLayout>
</FrameLayout>
